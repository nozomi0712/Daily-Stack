.profile
  .profile__wrapper
    .profile__wrapper__title
      プロフィールの編集
    .profile__wrapper__contents
      = form_for @profile, url: "/users/#{current_user.id}/profiles/#{@profile.id}", html: {method: 'PATCH'} do |f|
        #preview
          = image_tag @profile.image, class: "img__prev" if @profile.image?
        .profile__wrapper__contents__image
          変更するイメージを選択してください。（顔が写っているものは禁止）
        = f.file_field :image, type: 'file', id: "profile__image"
        .profile__wrapper__contents__elements
          .grade.tag
            .grade__title.title
              学年
            = f.select :grade,["小学１年生","小学2年生","小学3年生","小学4年生","小学5年生","小学6年生","中学1年生","中学2年生","中学3年生"]
          .prefecture.tag
            .prefecture__title.title
              都道府県
            = f.select :prefecture,['北海道','青森県','岩手県','宮城県','秋田県','山形県','福島県','茨城県','栃木県','群馬県','埼玉県','千葉県','東京都','神奈川県','新潟県','富山県','石川県','福井県','山梨県','長野県','岐阜県','静岡県','愛知県','三重県','滋賀県','京都府','大阪府','兵庫県','奈良県','和歌山県','鳥取県','島根県','岡山県','広島県','山口県','徳島県','香川県','愛媛県','高知県','福岡県','佐賀県','長崎県','熊本県','大分県','宮崎県','鹿児島県','沖縄県']
          .food.tag
            .food__title.title
              好きな食べ物（13文字以内）
            = f.text_field :li_food
          .book.tag
            .book__title.title
              好きな本（13文字以内）
            = f.text_field :li_book
          .anime.tag
            .anime__title.title
              好きなアニメ（13文字以内）
            = f.text_field :li_anime
          .youtuber.tag
            .youtuber__title.title
              好きなyoutuber（13文字以内）
            = f.text_field :li_youtuber
          .subject.tag
            .subject__title.title
              力を入れて勉強していること（学校の勉強以外でもOK）（13文字以内）
            = f.text_field :li_subject
          .custom.tag
            .custom__title.title
              毎日の習慣（13文字以内）
            = f.text_field :custom
          .lesson.tag
            .lesson__title.title
              習い事（13文字以内）
            = f.text_field :lessons
          .dream.tag
            .dream__title.title
              将来の夢（13文字以内）
            = f.text_field :dream
          .comment.tag
            ひとこと自己紹介！！（150文字以内）
          = f.text_area :comment, class: "comment__area"

        = f.submit "登録する", class: "profile__btn"