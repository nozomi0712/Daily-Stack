- if Favorite.find_by(user_id: current_user.id, post_id: @post.id)
  = link_to "/posts/#{@post.id}/favorites/#{@post.favorites.ids}", method: :delete, class: "element", remote: true do
    = icon("fas", "star", class: "favorite")
- else
  = link_to "/posts/#{@post.id}/favorites", method: :post, class: "element", remote: true do
    = icon("fas", "star", class: "unfavorite")
.count
  = @post.favorites.length